{% extends "./default.njk" %}

{% block main %}
<main class="main header-offset">
  <div class="artists-list">
    <h1>Artists</h1></br>
    <h2>EXHIBITION CATALOGUE</h2>
    <p><a href="/assets/download/cc_catalogue_digital.pdf">Download Here</a></p></br>
    <ul>
    {% for artist in artists %}
      <li>{{ artist.name }}
        {% if artist.url %} <span>----- <a href="{{ artist.url }}" target="_blank">website</a></span>{% endif %}
        {% if artist.social %} <span>+++++ <a href="{{ artist.social }}" target="_blank">social</a></span>{% endif %}
      </li>
    {% endfor %}
    </ul>
  </div>
</main>

{% endblock %}
