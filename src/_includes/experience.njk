{% extends "./default.njk" %}

{% block main %}
<main class="main jc-center header-offset">
  <div class="video-bg">
    <video autoplay muted playsinline id="digital-experience-bg-video">
      <source src="/assets/videos/opening.mp4" type="video/mp4">
    </video>
  </div>

  <div class="cc-box register transparent">
    <div class="close close-md"><img src="/assets/images/close.png" alt="close-button"></div>
    <div class="form form-register">
      <form action="/digital-experience/chapter-1" name="register" method="POST" data-netlify="true">
        <input type="text" name="name" required placeholder="name" class="form-input">
        <input type="email" name="email" required placeholder="email*" class="form-input">
        <p>*so we can notify you about the upcoming exhibition + program</p>
        <div class="submit-area">
          <button type="submit" class="submit-button">enter</button>
        </div>
      </form>
    </div>
  </div>

  <div class="cc-box already-registered transparent hidden">
    <div class="close close-md"><img src="/assets/images/close.png" alt="close-button"></div>
    <div class="form registered-message">
      <p>You have previously registered for Corona Culture - the Digital Experience</p>
      <a href="/digital-experience/chapter-1" id="begin-again-btn">Begin again?</a>
    </div>
  </div>

  <div class="cc-box mobile-box">
    <div class="close close-md"><img src="/assets/images/close.png" alt="close-button"></div>
    <div class="form mobile-message">
      <h2>Corona Culture <br>the Digital Experience</h2>
      <p>is meant to be experienced<br>on a large screen</p>
      <p>please view this<br>from a desktop browser</p>
    </div>
  </div>
</main>

{% endblock %}
