<main class="main mt-88">
  <div class="form form-contact">
    <h1>Contact us</h1>
    <form action="/" name="contact" method="post" data-netlify="true">
      <input type="text" name="name" placeholder="NAME" class="form-input">
      <input type="email" name="email" placeholder="EMAIL" class="form-input">
      <textarea type="textarea" name="message" placeholder="MESSAGE" class="form-input form-message" rows="10"></textarea>
      <div class="submit-area">
        <button type="submit" class="submit-button">Send</button>
      </div>
    </form>
  </div>
</main>
